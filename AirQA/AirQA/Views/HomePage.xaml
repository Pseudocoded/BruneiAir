<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirQA.Views.HomePage"
            x:Name="tabPage"
            Title="Home"
            
            >

    <!--BRUNEI MUARA-->
    <ContentPage x:Name="brunei"
                 Title="BRUNEI MUARA"
                 >
        <ContentPage.ToolbarItems>

            <ToolbarItem Icon="ref.png" Order="Primary" 
                         Clicked="Ref_Clicked"
                         />

            <ToolbarItem Icon="share.png" Order="Primary" 
                         Clicked="Share_Clicked"
                         />

        </ContentPage.ToolbarItems>

        <AbsoluteLayout >

            <ActivityIndicator x:Name="activity"  
                               AbsoluteLayout.LayoutBounds="0.5,0.05,100,50"  
                   AbsoluteLayout.LayoutFlags="PositionProportional"  
                       IsRunning="False"  
                       IsEnabled="False"  
                       IsVisible="False"  
                       Color="Black"  
                       BackgroundColor="Transparent"/>
            <!--BACKGROUND-->
            <Image Source="mos.jpg" Opacity="0.3"
                   Aspect="AspectFill" 
                   AbsoluteLayout.LayoutBounds="0,0,1,1"
                   AbsoluteLayout.LayoutFlags="All"/>

            <!--DISTRICT-->
            <Label Text="Brunei - Muara" 
                   TextColor="Black"
                   FontSize="50" 
                   HorizontalOptions="CenterAndExpand" 
                   AbsoluteLayout.LayoutBounds="0.5,0.15,500,50"  
                   AbsoluteLayout.LayoutFlags="PositionProportional"  
                           >
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Raleway-Regular-Thin" />
                        <On Platform="Android" Value="Raleway-Regular.ttf#Raleway-Regular" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>

            <!--UPDATES-->
            <Label x:Name="Brunei_Muara_Last_Update"
                         TextColor="Black"
                                FontSize="20"
                            VerticalOptions="StartAndExpand" 
                            HorizontalOptions="CenterAndExpand"
                            AbsoluteLayout.LayoutBounds="0.5,0.28,400,50"  
            AbsoluteLayout.LayoutFlags="PositionProportional">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Raleway-Regular-Thin" />
                        <On Platform="Android" Value="Raleway-Regular.ttf#Raleway-Regular" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>

            <!--RIGHT BUTTON-->
            <Button Image="right.png"
    AbsoluteLayout.LayoutBounds="1,.5,50,100"  
            AbsoluteLayout.LayoutFlags="PositionProportional"  
                          BackgroundColor="Transparent"
                    Clicked="BnRight_Clicked"/>

            <!--LEVEL-->
            <Label x:Name="BruneiLevel"
                               TextColor="Black"
                               FontSize="40"
                            VerticalOptions="CenterAndExpand" 
                            HorizontalOptions="CenterAndExpand" 
                            AbsoluteLayout.LayoutBounds="0.5,0.65,300,100"  
            AbsoluteLayout.LayoutFlags="PositionProportional">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Raleway-Regular-Thin" />
                        <On Platform="Android" Value="Raleway-Regular.ttf#Raleway-Regular" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>

            <!--PSI READINGS-->
            <Label 
                   TextColor="Black"
                   FontSize="80"
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" 
                   AbsoluteLayout.LayoutBounds="0.5,0.45,300,100"  
            AbsoluteLayout.LayoutFlags="PositionProportional"  
                   x:Name="BruneiMuara_psi">

                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Montserrat-Regular" />
                        <On Platform="Android" Value="Montserrat-ExtraBold.ttf#Montserrat-ExtraBold" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>

            <!--alerts warning-->

            <Label x:Name="BruneiWarn"
                   TextColor="Black"
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" 
                   AbsoluteLayout.LayoutBounds="0.5,0.95,350,200"  
            AbsoluteLayout.LayoutFlags="PositionProportional"  >
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="iOS" Value="Raleway-Regular" />
                        <On Platform="Android" Value="Raleway-Regular.ttf#Raleway-Regular" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
        </AbsoluteLayout>
    </ContentPage>

